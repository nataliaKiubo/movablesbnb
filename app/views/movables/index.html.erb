<div class="container">
<p style="color: green"><%= notice %></p>

<h1><%= params[:categories] %></h1>

<div class="cards">
  <% @movables.each do |movable| %>
    <a class="card-trip" href="<%= movable_path(movable.id) %>">
      <%= cl_image_tag movable.main_image.key, crop: :fill %>
      <div class="card-trip-infos">
        <div>
          <h2><%= movable.name %></h2>
          <p><%= movable.description.first(15) %></p>
        </div>
        <h2 class="card-trip-pricing"><%= movable.price %> CHF / day</h2>
        <%# <%= cl_image_tag current_user.photo.key, crop: :fill, class: "card-trip-user avatar" %>
        <% if movable.main_image.key %>
          <%= cl_image_tag movable.main_image.key, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
        <% else %>
          <%= cl_image_tag "https://res.cloudinary.com/ddxqnyga2/image/upload/v1661437338/001-user_vutg9d.png", crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
      </div>
    </a>
  <% end %>
</div>
</div>
